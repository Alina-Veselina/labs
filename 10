//10
//Задание к теме 10.
//1. Даны два целых числа: A, B. Проверить истинность высказывания: «Справедливы неравенства A > 2 и B ≤ 3»
//2. Даны три целых числа: A, B, C. Проверить истинность высказывания: «Справедливо двойное неравенство A < B < C».
//3. Дано целое положительное число. Проверить истинность высказывания: «Данное число является четным двузначным».
//4. Дано трехзначное число. Проверить истинность высказывания: «Цифры данного числа образуют возрастающую или убывающую последовательность».
//5. Дано четырехзначное число. Проверить истинность высказывания: «Данное число читается одинаково слева направо и справа налево».
//6. Даны целые числа a, b, c, являющиеся сторонами некоторого треугольника. Проверить истинность высказывания: «Треугольник со сторонами a, b, c является прямоугольным».
//7. Даны целые числа a, b, c. Проверить истинность высказывания: «Существует треугольник со сторонами a, b, c».

include "pch.h"
#include <iostream>
#include <Math.h>

using namespace std;

void main()
{
	setlocale(LC_ALL, "Russian");
	float x, y, t, x2, y2;
	int menu, a, b, c;
	while (true) {
		cout << "Введите номер задания (1-7, 0 - выход): ";
		cin >> menu;
		switch (menu)
		{
    case 0:
      return false;
    } break;
		case 1:
		{
			cout << "Даны неравенства (А > 2), (B <= 3). Введите A,B: ";
			cin >> a >> b;
			if ((a > 2) && (b <= 3)) cout << "Выражение справедливо. " << endl;
			else cout << "Выражение несправедливо. " << endl;
		} break;

		case 2:
		{
			cout << "Дано неравенство (А < B < C). Введите A,B,C: ";
			cin >> a >> b >> c;
			if ((a < b) && (b < c)) cout << "Выражение справедливо. " << endl;
			else cout << "Выражение несправедливо. " << endl;
		} break;
		case 3:
		{
			cout << "'Данное число является четным двузначным'. Введите число: ";
			cin >> a;
			if ((a > 9) && (a < 100) && (a % 2 == 0)) cout << "Высказывание справедливо. " << endl;
			else cout << "Высказывание несправедливо. " << endl;
		} break;
		case 4:
		{
			cout << "'Цифры данного числа образуют возрастающую или убывающую последовательность'. Введите трёхзначное число: ";
			cin >> a;
			if ((a/100 < (a%100)/10) && ((a % 100) / 10 < a%10) || (a / 100 > (a % 100) / 10) && ((a % 100) / 10 > a % 10)) cout << "Высказывание справедливо. " << endl;
			else cout << "Высказывание несправедливо. " << endl;
		} break;
		case 5:
		{
			cout << "'Данное число читается одинаково слева направо и справа налево'. Введите четырёхзначное число: ";
			cin >> a;
			if ((a/1000 == a % 10) && ((a%1000)/100 == (a % 100) / 10)) cout << "Высказывание справедливо. " << endl;
			else cout << "Высказывание несправедливо. " << endl;
		} break;
		case 6:
		{
			cout << "'Треугольник со сторонами a, b, c является прямоугольным'. Введите a,b,c: ";
			cin >> a >> b >> c;
			if ((a * a + b * b == c * c) || (a * a + c * c == b * b) || (b * b + c * c == a * a)) cout << "Высказывание справедливо. " << endl;
			else cout << "Высказывание несправедливо. " << endl;
		} break;
		case 7:
		{
			cout << "'Существует треугольник со сторонами a, b, c'. Введите a,b,c: ";
			cin >> a >> b >> c;
			if ((a + b >= c) && (a + c >= b) && (b + c >= a)) cout << "Высказывание справедливо. " << endl;
			else cout << "Высказывание несправедливо. " << endl;
		} break;
		}
	}
}
