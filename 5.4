//Даны координаты двух противоположных вершин прямоугольника:
//(x1, y1), (x2, y2). Стороны прямоугольника параллельны осям координат.
//Найти периметр и площадь данного прямоугольника.


#include <iostream>//подключение необходимых библиотек
#include <math.h>
using namespace std;
int main()
{
	int x1, x2, y1, y2, p, s; 
	cout << "Enter first cord" << endl; // Ввод координат
	cin >> x1 >> y1;
	cout << "Enter second cord" << endl;
	cin >> x2 >> y2;
	p = (abs(y2 - y1) + abs(x2 - x1)) * 2; // вычисление периметра и площади по формулам
	s = abs(y2 - y1) * abs(x2 - x1);
	cout << "P = " << p << endl << "S = " << s; // вывод результата
}
