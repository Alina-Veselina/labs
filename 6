//Задания обозначены командами case, номер кейса соответствует номеру задания.
//1. Поменять местами содержимое переменных A и B и вывести новые значения A и B.
//2. Даны переменные A, B, C. Изменить их значения, переместив содержимое A в B, B — в C, C — в A, и вывести новые значения переменных A, B, C.
//3. Даны переменные A, B, C. Изменить их значения, переместив содержимое A в C, C — в B, B — в A, и вывести новые значения переменных A, B, C.
//4. Найти значение функции y = 3x6 − 6x2 − 7 при данном значении x
//5. Найти значение функции y = 4(x−3)6 − 7(x−3)3 + 2 при данном значении x
//6. Дано число A. Вычислить A8 , используя вспомогательную переменную и три операции умножения.
//7. Дано число A. Вычислить A15, используя две вспомогательные переменные и пять операций умножения.



#include "stdafx.h" //Подключение необходимых библиотек
#include <iostream>
#include <Math.h>

using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");
	float a, b, c, d; 
	int menu, i;
	while (true){
		cout << "Введите номер задания (1-7): ";
		cin >> menu;
		switch (menu) //Подключение меню выбора номера задания
		{
			case 1: //Первое задание
			{
				cout << "Введите число А: "; //Ввод переменных
				cin >> a;
				cout << "Введите число B: ";
				cin >> b;
				c = a; //Изменение переменных местами при помощи третьей переменной
				a = b;
				b = c;
				cout << "Теперь A = " << a << ", а B = " << b << endl;  //Вывод результата
			} break;

			case 2:
			{
				cout << "Введите число А: ";
				cin >> a;
				cout << "Введите число B: ";
				cin >> b;
				cout << "Введите число C: "; //Ввод переменных
				cin >> c;
				d = c; //Изменение переменных местами при помощи четвертой переменной
				c = b;
				b = a;
				a = d;
				cout << "Теперь A = " << a << ", а B = " << b << ", а C = " << c << endl; //Вывод результата
			} break;
			case 3:
			{
				cout << "Введите число А: "; //Вод переменных
				cin >> a;
				cout << "Введите число B: ";
				cin >> b;
				cout << "Введите число C: ";
				cin >> c;
				d = a;  //Изменение переменных местами при помощи четвертой переменной
				a = b;
				b = c;
				c = d;
				cout << "Теперь A = " << a << ", а B = " << b << ", а C = " << c << endl; //Вывод результата
			} break;
			case 4:
			{
				cout << "y = 3x^6 - 6x^2 - 7. Введите значение х: "; //Ввод переменной
				cin >> a;
				cout << "y = " << (3*pow(a,6) - 6*pow(a,2) - 7) << " при x = " << a << endl; //вычисление результата и его вывод
			} break;
			case 5:
			{
				cout << "y = 4(x-3)^6 - 7(x-3)^3 +2. Введите значение х: "; //Ввод переменной
				cin >> a;
				cout << "y = " << (4 * pow((a - 3), 6) - 7 * pow((a - 3), 3) + 2) << " при x = " << a << endl; //Вычисление результата и его вывод
			} break;
			case 6:
			{
				cout << "Введите значение A: "; //Ввод переменной
				cin >> a;
				for (i = 0; i<3; i++) { //вычисление степени числа при помощи цикла
					a = a*a;
				}
				cout << "A^8 = " << a << endl; //Вывод результата
			} break;
			case 7:
			{
				cout << "Введите значение A: "; //ВВод переменной
				cin >> a;
				c = 1 / a; //число обратное исходному
				for (i = 0; i<4; i++) { //вычисление степени числа при помощи цикла
					a = a*a;
				}
				a = a * c; 
				cout << "A^15 = " << a << endl; //Вывод результата
			} break;
		}
	}
}
