//8
//Задание к теме 8.
//1. Дан размер файла в байтах. Найти количество полных килобайтов, которые занимает данный файл
//2. Даны целые положительные числа A и B (A > B). На отрезке длины A размещено максимально возможное количество отрезков длины B (без наложений). Найти количество отрезков B, размещенных на отрезке A.
//3. Даны целые положительные числа A и B (A > B). На отрезке длины A размещено максимально возможное количество отрезков длины B (без наложений). Найти длину незанятой части отрезка A.
//4. Дано двузначное число. Вывести число, полученное при перестановке цифр исходного числа.
//5. Дано трехзначное число. В нем зачеркнули первую слева цифру и приписали ее справа. Вывести полученное число.


#include "pch.h" //подключение необходимых библиотек
#include <iostream>
#include <Math.h>

using namespace std;

void main()
{
	setlocale(LC_ALL, "Russian");
	float x, y, t, x2, y2; //объявление переменных
	int menu, a, b, c;
	while (true) {
		cout << "Введите номер задания (1-5): "; //подключение меню для работы с кейсами, номер кейса соответствует номеру задания
		cin >> menu;
		switch (menu)
		{
		case 1:
		{
			cout << "Введите размер файла в байтах: ";
			cin >> a;
			cout << "Такой файл весит полных " << a/1024 << "Кб. " << endl;
		} break;

		case 2:
		{
			cout << "Введите длины отрезков А и В (A > B): ";
			cin >> a >> b;
			cout << "В отрезок А помещается " << a/b << " отрезков В." << endl;
		} break;
		case 3:
		{
			cout << "Введите длины отрезков А и В (A > B): ";
			cin >> a >> b;
			cout << "После помещения отрезков B в А, незанятая часть равна " << a % b << "." << endl;
		} break;
		case 4:
		{
			cout << "Введите двузначное число: ";
			cin >> a;
			cout << "Число " << a << " после перестановки цифр превратилось в " << (a%10)*10 + a/10 << "." << endl;
		} break;
		case 5:
		{
			cout << "Введите трёхзначное число: ";
			cin >> a;
			cout << "Число " << a << " после перемещения первой цифры в конец превратилось в " << (a-((a / 100) * 100)) * 10 + (a / 100) << "." << endl;
		} break;
	}
}
