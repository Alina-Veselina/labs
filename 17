//Задание к теме 17.
//1. Дан массив размера N и целые числа K и L (1 ≤ K ≤ L ≤ N). Найти среднее арифметическое элементов массива с номерами от K до L включительно.
//2. Дан целочисленный массив размера N, не содержащий одинаковых чисел. Проверить, образуют ли его элементы арифметическую прогрессию. Если образуют, то вывести разность прогрессии, если нет — вывести 0.
//3. Дан массив A размера N. Найти минимальный элемент из его элементов с четными номерами: A2, A4, A6,
//4. Дан массив размера N. Найти номер его последнего локального максимума (локальный максимум — это элемент, который больше любого из своих соседей).
//5. Дан целочисленный массив размера N, содержащий ровно два одинаковых элемента. Найти номера одинаковых элементов и вывести эти номера в порядке возрастания


//программу компилировала на сайте https://www.onlinegdb.com/online_c++_compiler

#include <iostream>
#include <math.h>


using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");
	float x, y, sum;
	int menu, a, b, c, i, j;
	float br[5];
	int *arr;
	char ch = ' ';
	while (true) {
		cout << "Введите номер задания (1-5, 0 - выход): ";
		cin >> menu;
		switch (menu)
		{
		case 0:
		{
		    return false;
		}break;
		
		case 1:
		{
			cout << "Введите размер массива N и заполните его: ";
			cin >> a;
			sum = 0;
			arr = new int[a];
			for (i = 0; i < a; i++)
			{
				cin >> arr[i];
			}
			cout << "Введите целые числа K, L (1 <= K <= L <= N): ";
			cin >> b >> c;
			for (i = b-1; i <= c-1; i++)
			{
				sum += arr[i];
			}
			cout << "Среднее арифметическое элементов " << b << "-" << c << " равно " << sum / (c - b + 1) << "." << endl;
		} break;

		case 2:
		{
			cout << "Введите размер массива N и заполните его: ";
			cin >> a;
			arr = new int[a];
			for (i = 0; i < a; i++)
			{
				cin >> arr[i];
			}
			b = arr[1] - arr[0];
			i = 1;
			while ((arr[i] - arr[i - 1]) == b) i++;
			if (a == i) cout << "Это арифметическая прогрессия с шагом " << b << "." << endl;
			else cout << "Это не арифметическая прогрессия, 0." << endl;
		} break;

		case 3:
		{
			sum = 99999;
			c = 0;
			cout << "Введите размер массива N и заполните его: ";
			cin >> a;
			arr = new int[a];
			for (i = 0; i < a; i++)
			{
				cin >> arr[i];
			}
			for (i = 0; i < a; i++)
			{
				if (i % 2 != 0 && arr[i] <= sum) 
				{
					sum = arr[i];
					c = i;
				}
			}
			cout << "Минимальный чётный элемент массива " << c + 1 << ": " << sum << "." << endl;
		} break;

		case 4:
		{
			cout << "Введите размер массива N и заполните его: ";
			cin >> a;
			c = 0;
			arr = new int[a];
			for (i = 0; i < a; i++)
			{
				cin >> arr[i];
			}
			for (i = 0; i < a; i++)
			{
				if (i == 0)
				{
					if (arr[i] > arr[i + 1]) c = i;
				}
				else if (i == a - 1) 
				{
					if (arr[i] > arr[i - 1]) c = i;
				}
				else if (arr[i] > arr[i - 1] && arr[i] > arr[i + 1]) c = i;
			}
			cout << "Номер элемента локального максимума - " << c + 1 << "." << endl;
		} break;
		
		case 5:
		{
		    {
                int a[10];
                int n;
 
                printf("Введите количество элементов массива ");
                scanf("%i",&n);
 
                int i;
                for (i=0; i<n; ++i){
                    printf("a[%i] : ",i+1);
                    scanf("%i",&a[i]);
                }
 
                int i2;
                for (i=0; i<n-1;++i){
                    for (i2=i+1; i2<n;++i2){
                        if (a[i]==a[i2]){
                            printf(" Номера элементов массива с одинаковыми значениями:%i %i\n",i+1,i2+1);
                        }
                    }
                }
 
                return 0;
            }break;
		}
	}
}
}
